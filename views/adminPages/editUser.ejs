<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    />
    <title>Edit User</title>
  </head>
  <body>
    <form action="/editUser" method="POST">
      <div class="modal-header">
        <h4 class="modal-title">Edit Employee</h4>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-hidden="true"
        >
          &times;
        </button>
      </div>
        <div class="form-group">
          <label>Username</label>
          <input
            name="Name"
            value="<%= alreadyexsit.Name %>"
            type="text"
            class="form-control"
            required
            minlength="5"
          />
        </div>
        <div class="form-group">
          <label>Email</label>
          <input
            name="Email"
            type="email"
            value="<%= alreadyexsit.Email %>"
            class="form-control"
            required
            minlength="5"
          />
        </div>
        <div class="form-group">
          <label>Phone Number</label>
          <input
            name="Phone"
            type="text"
            value="<%= alreadyexsit.Phone %>"
            class="form-control"
            required
            minlength="10"
          />
        </div>
      </div>
      <div class="modal-footer">
        <input
          type="button"
          class="btn btn-default"
          data-dismiss="modal"
          value="Cancel"
        />
        <input type="submit" class="btn btn-info" value="Save" />
      </div>
    </form>
  </body>
</html>
